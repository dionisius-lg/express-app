<div class="login-box">
    <div class="card card-outline card-primary">
        <div class="card-header text-center">
            <a href="#" class="h1">Express <b>POS</b></a>
        </div>
        <div class="card-body">
            <p class="login-box-msg">Sign in to start your session</p>
            <form action="/auth/login" id="formLogin" method="post">
                <div class="form-group mb-4">
                    <div class="input-group">
                        <input type="text" name="username" class="form-control rounded-0" placeholder="Username" value="dion" autofocus>
                        <div class="input-group-append">
                            <div class="input-group-text rounded-0">
                                <span class="fas fa-user fa-fw"></span>
                            </div>
                        </div>
                    </div>
                    <span class="form-error small text-danger"></span>
                </div>
                <div class="form-group mb-4">
                    <div class="input-group">
                        <input type="password" name="password" class="form-control rounded-0" placeholder="Password" value="dion">
                        <div class="input-group-append">
                            <div class="input-group-text rounded-0">
                                <span class="fas fa-lock fa-fw"></span>
                            </div>
                        </div>
                    </div>
                    <span class="form-error small text-danger"></span>
                </div>
                
                <div class="row">
                    <div class="col-12 text-right">
                        <button type="submit" class="btn btn-primary rounded-0">Sign In</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <% if (messages.error) { %>
        <div class="mt-4">
            <div class="alert alert-warning alert-dismissible fade show" role="alert">
                <%= messages.error %>
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        </div>
    <% } %>
</div>

<script>
    $(document).ready(() => {
        let formError = JSON.parse('<%- messages.formError ? messages.formError : false %>')

        if (formError && formError !== null && typeof formError === 'object') {
            $.each(formError, (key, val) => {
                let element = $(`#formLogin [name="${key}"]`)

                if (val !== null) {
                    element.addClass('is-invalid')
                    element.parents('.form-group').find('.form-error').html(val.substr(0,1).toUpperCase() + val.substr(1))
                }
            })
        }
    })
</script>